{
    "version": 3,
    "beforeBuildTasks": [],
    "afterBuildTasks": [
        {
            "name": "clean",
            "command": "cd \"${OutDir}\" && del *.sym *.cdb *.adb *._*"
        },
        {
            "name": "output bin file",
            "command": "\"${CompilerFolder}\\makebin.exe\" -p < \"${OutDir}\\${targetName}.ihx\" > \"${OutDir}\\${targetName}.bin\"",
            "disable": false
        }
    ],
    "global": {
        "device": "mcs51",
        "optimize-type": "speed",
        "misc-controls": "--model-small --iram-size 256 --xram-size 1024 --code-size 0x3000 --opt-code-size --xram-loc 0x00C8"
    },
    "c/cpp-compiler": {
        "language-c": "sdcc99"
    },
    "asm-compiler": {},
    "linker": {
        "$mainFileName": "main",
        "output-format": "hex"
    }
}